<%= form_for(post, url: url) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class=col-md-3>
    <br>
      <div class="card">
        <div class="card-block">
          <%if @post.new_record? %> 
            <h4 class="card-title">New Post</h4>
          <%else%>
            <h4 class="card-title">
              <b>Edit</b>
              <span class="thin-text"><%= @post.title %></span>
            </h4>
          <%end%>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="field">
              <%= f.label :title, class: "control-label" %>
              <%= f.text_field :title, class: "form-control", placeholder: "Someone cool title" %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= f.label :banner_image_url, class: "control-label" %>
              <%= f.text_field :banner_image_url, class: "form-control", placeholder: "www.coolimagen.com/yourimage..."%>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= f.label :description, class: "control-label" %>
              <%= f.text_area :description, class: "form-control", style: "height: 200px;", placeholder: "A bit of all" %>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <div class=col-md-9>
      <div class="field">
        <%= f.label :body, class: "text-muted" %>
        <%= f.text_area :body %>
      </div>
    </div>
    <div class=col-md-3>
      <div class="actions" style="position:relative; bottom: 50px;">
        <%= f.submit "Save Blog Post", class: "btn btn-lg btn-success btn-block" %>
      </div>
    </div>
  </div>
  <div class="btn-group" role="group" aria-label="...">
    <%if @post.persisted? %>
      <%= link_to 'Show', @post, class: "btn btn-primary" %> 
    <%end%>
      <%= link_to 'Back', authors_posts_path, class: "btn btn-info" %>
  </div>
  <p class="text-muted">If you want see the source of body, you have to click in <em>Tools</em> and <em>Source Code.</em></p>
<% end %>
